<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    tools:context=".MainActivity"
    android:gravity="center">

    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesion"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginBottom="100dp"/>

    <EditText
        android:id="@+id/correo_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="correo"
        android:layout_below="@id/login"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/contra_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="contraseÃ±a"
        android:layout_below="@id/correo_login"
        android:textAlignment="center"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/boton_log_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesion"
        android:layout_below="@id/contra_login"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>

    <Button
        android:id="@+id/boton_ir_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="registrarse"
        android:layout_below="@id/boton_log_in"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>

</RelativeLayout>